{
  "name": "@veryan/lit-spa",
  "version": "0.3.4",
  "license": "MIT",
  "description": "A lib for using lit.dev as an Single Page Application",
  "author": "Veryan Goodship",
  "homepage": "https://veryan.ca",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Veryan4/lit-spa.git"
  },
  "bugs": {
    "url": "https://github.com/Veryan4/lit-spa/issues"
  },
  "keywords": [
    "webcomponent",
    "lit",
    "ts",
    "typescript",
    "spa"
  ],
  "main": "./dist/lib/lit-spa.js",
  "module": "./dist/lib/lit-spa.js",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib/lit-spa.js",
      "require": "./dist/lib/lit-spa.js"
    }
  },
  "files": [
    "dist/lib"
  ],
  "scripts": {
    "dev": "vite --mode=dev",
    "build-lib": "tsc --project tsconfig.lib.json && vite build --mode lib",
    "build": "tsc --project tsconfig.demo.json && vite build",
    "lint": "eslint --ext .ts --ignore-pattern .gitignore --fix src",
    "format": "prettier . --write",
    "test": "jest src"
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/node": "^22.13.14",
    "eslint": "^9.33.0",
    "typescript-eslint": "8.40.0",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-wc": "^3.0.1",
    "@eslint/js": "9.33.0",
    "jest": "29.7.0",
    "prettier": "3.6.2",
    "ts-jest": "29.4.1",
    "typescript": "5.9.2",
    "vite": "7.1.3",
    "vite-plugin-dts": "4.5.4",
    "@web/rollup-plugin-copy": "0.5.1",
    "@web/rollup-plugin-html": "2.3.0",
    "@lit-labs/rollup-plugin-minify-html-literals": "^0.1.0",
    "rollup-plugin-summary": "3.0.1",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-node-resolve": "16.0.1",
    "vite-plugin-compression2": "2.2.0"
  },
  "dependencies": {
    "lit": "3.3.1"
  }
}
